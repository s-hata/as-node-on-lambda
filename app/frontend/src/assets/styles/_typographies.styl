@charset 'utf-8'

.editable
  font-size: 18px
  font-family: inherit
  font-weight: inherit
  line-height: 1.4em
  color: inherit

input.editable::input-placeholder
  font-style: italic
  font-weight: 300
  color: #e6e6e6

input.editable::-webkit-input-placeholder
  font-style: italic
  font-weight: 300
  color: #e6e6e6

input.editable::-moz-placeholder
  font-style: italic
  font-weight: 300
  color: #e6e6e6
